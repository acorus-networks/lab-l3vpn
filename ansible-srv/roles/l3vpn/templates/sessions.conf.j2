{% set ip_version='ipv4' %}
{% set group_name='ipv4-customers' %}

{% if l3vpn_sessions is defined %}
{% for vrf_sessions in l3vpn_sessions %}

routing-instances {
  {{ vrf_sessions.vrf }} {
    protocols {
      bgp {
        replace:
        group {{ group_name }} {
          type external;
          description "Group {{ ip_version }} customers";
          multipath;
          family inet {
            unicast;
          }
          local-as {{ my_asn }};
        }
      }
    }
  }
}
{% for session in vrf_sessions.sessions %}
{% if session.ipv4 is defined %}
routing-instances {
  {{ vrf_sessions.vrf }} {
    protocols {
      bgp {
        group {{ group_name }} {
          replace:
          neighbor {{ session.ipv4.peer_ip }} {
            description "AS{{ session.peer_asn }} {{ session.name }}";
            peer-as {{ session.peer_asn }};
          }
        }
      }
    }
  }
}
{% endif %}
{% if session.ipv6 is defined %}
routing-instances {
  {{ vrf_sessions.vrf }} {
    protocols {
      bgp {
        group {{ group_name }} {
          replace:
          neighbor {{ session.ipv6.peer_ip }} {
            description "AS{{ session.peer_asn }} {{ session.name }}";
            peer-as {{ session.peer_asn }};
          }
        }
      }
    }
  }
}
{% endif %}
